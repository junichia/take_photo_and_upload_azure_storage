<Page
    x:Class="capturePhoto.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:capturePhoto"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="575">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="10,10,10,-80">
        <Image x:Name="imageControl" Margin="10,70,10,0" NineGrid="0" Source="Assets/StoreLogo.png" Height="245" VerticalAlignment="Top"/>
        <Button x:Name="take_a_photo" Content="take a photo" HorizontalAlignment="Stretch" Margin="10,10,10,0" VerticalAlignment="Top" Click="button_Click" Height="55"/>
        <TextBlock x:Name="textBlock1" Margin="10,320,10,0" TextWrapping="Wrap" Text="path" Opacity="0.99" Foreground="Black" SelectionHighlightColor="White" Height="90" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock_score" Margin="10,415,10,10" TextWrapping="Wrap" Text="score"/>

    </Grid>
</Page>
